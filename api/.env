# API Service Environment Configuration

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=production

# Production Feature Flags
RADAR_ONLY=true
ENABLE_PORTFOLIO_SIM=false
ENABLE_TRADE_ACTIONS=false
ENABLE_ANY_WALLET_INTEGRATIONS=false
PUBLIC_ROUTES=config,signals,search,health,listings

# Database
DATABASE_PATH=../data/radar.db

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# API Keys (using demo/test keys for development)
BIRDEYE_API_KEY=demo_key
GOPLUS_API_KEY=demo_key
COINGECKO_API_KEY=demo_key

# Chains
CHAINS=sol,eth,bsc,base

# Refresh Intervals
REFRESH_MS=30000

# Scoring Configuration
SCORE_WEIGHT_MOMENTUM=0.3
SCORE_WEIGHT_VOLUME=0.25
SCORE_WEIGHT_LIQUIDITY=0.25
SCORE_WEIGHT_SECURITY=0.2

# Thresholds
MIN_LIQUIDITY_USD=1000
MIN_VOLUME_24H_USD=500
MIN_HOLDERS=10
MAX_TAX_PERCENT=10

# Cache TTL (seconds)
CACHE_TTL_TOKENS=300
CACHE_TTL_SECURITY=3600
CACHE_TTL_PRICES=60

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/api.log

# Production Alert Channels
DISCORD_WEBHOOK_URL_PROD=https://discord.com/api/webhooks/YOUR_DISCORD_WEBHOOK_ID/YOUR_DISCORD_WEBHOOK_TOKEN
TELEGRAM_BOT_TOKEN_PROD=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_CHAT_ID_PROD=YOUR_TELEGRAM_CHAT_ID

# Alert Configuration
ALERT_TYPES_ENABLED=RADAR_MOMENTUM,CEX_LISTING
ALERT_ENVIRONMENT=production

# Alert Thresholds
RADAR_MOMENTUM_THRESHOLD=75
CEX_LISTING_COOLDOWN_HOURS=24

# Launch-Week Guardrails
ALERT_RATE_LIMIT=15
ALERT_KILL_LIMIT=25
ERROR_RATE_WARN=0.10
ERROR_RATE_KILL=0.20
MUTE_DURATION_MIN=30
GUARDRAILS_ENABLED=true

# Feature Flags
RADAR_ONLY=true