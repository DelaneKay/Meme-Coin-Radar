# API Service Environment Configuration

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Database
DATABASE_PATH=../data/radar.db

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# API Keys
BIRDEYE_API_KEY=your_birdeye_api_key_here
GOPLUS_API_KEY=your_goplus_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# Chains
CHAINS=sol,eth,bsc,base

# Refresh Intervals
REFRESH_MS=30000

# Scoring Configuration
SCORE_WEIGHT_MOMENTUM=0.3
SCORE_WEIGHT_VOLUME=0.25
SCORE_WEIGHT_LIQUIDITY=0.25
SCORE_WEIGHT_SECURITY=0.2

# Thresholds
MIN_LIQUIDITY_USD=1000
MIN_VOLUME_24H_USD=500
MIN_HOLDERS=10
MAX_TAX_PERCENT=10

# Cache TTL (seconds)
CACHE_TTL_TOKENS=300
CACHE_TTL_SECURITY=3600
CACHE_TTL_PRICES=60

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/api.log