# Frontend Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# RADAR_ONLY Mode - Restricts UI to radar components only
NEXT_PUBLIC_RADAR_ONLY=false

# Feature Flags
NEXT_PUBLIC_ENABLE_ALERTS=true
NEXT_PUBLIC_ENABLE_CEX_MONITORING=true
NEXT_PUBLIC_ENABLE_ADVANCED_FILTERS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Refresh Configuration
NEXT_PUBLIC_REFRESH_INTERVAL=30
NEXT_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL=5000

# UI Configuration
NEXT_PUBLIC_DEFAULT_CHAIN=sol
NEXT_PUBLIC_ITEMS_PER_PAGE=50
NEXT_PUBLIC_MAX_TOKENS_DISPLAY=200

# Development
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_DATA=false