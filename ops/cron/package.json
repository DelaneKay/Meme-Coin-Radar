{
  "name": "@meme-coin-radar/scheduler",
  "version": "1.0.0",
  "description": "Job scheduler service for Meme Coin Radar system",
  "main": "scheduler.js",
  "scripts": {
    "start": "node scheduler.js",
    "dev": "nodemon scheduler.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "health-check": "curl -f http://localhost:3001/health || exit 1"
  },
  "keywords": [
    "scheduler",
    "cron",
    "jobs",
    "meme-coin",
    "radar",
    "automation"
  ],
  "author": "Meme Coin Radar Team",
  "license": "MIT",
  "dependencies": {
    "node-cron": "^3.0.3",
    "js-yaml": "^4.1.0",
    "express": "^4.18.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "prom-client": "^15.1.0",
    "redis": "^4.6.10",
    "pg": "^8.11.3",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "lodash": "^4.17.21",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meme-coin-radar/scheduler.git"
  },
  "bugs": {
    "url": "https://github.com/meme-coin-radar/scheduler/issues"
  },
  "homepage": "https://github.com/meme-coin-radar/scheduler#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "camelcase": "off"
    }
  },
  "nodemonConfig": {
    "watch": ["*.js", "*.yml", "*.yaml"],
    "ext": "js,yml,yaml",
    "ignore": ["node_modules/", "logs/", "coverage/"],
    "delay": 2000
  }
}