{
  "name": "meme-coin-radar",
  "version": "1.0.0",
  "description": "Free-tier memecoin early-pump radar with CEX listing detection",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\" \"npm run dev:sentinel\"",
    "dev:api": "cd api && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:sentinel": "cd sentinel && npm run dev",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "cd api && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:api",
    "start:api": "cd api && npm run start",
    "test": "npm run test:api && npm run test:frontend",
    "test:api": "cd api && npm test",
    "test:frontend": "cd frontend && npm test"
  },
  "keywords": [
    "memecoin",
    "radar",
    "defi",
    "crypto",
    "trading",
    "alerts"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "api",
    "frontend",
    "sentinel"
  ]
}