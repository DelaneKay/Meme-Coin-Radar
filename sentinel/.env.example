# CEX Sentinel Environment Configuration

# Service Configuration
NODE_ENV=development

# Webhook Configuration
CEX_WEBHOOK_URL=http://localhost:3001/api/cex-listings

# Exchange Monitoring
MONITORED_EXCHANGES=kucoin,bybit,mexc,gate,lbank,bitmart

# Check Intervals (minutes)
KUCOIN_CHECK_INTERVAL=5
BYBIT_CHECK_INTERVAL=5
MEXC_CHECK_INTERVAL=10
GATEIO_CHECK_INTERVAL=10
LBANK_CHECK_INTERVAL=15
BITMART_CHECK_INTERVAL=15

# Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
REQUEST_TIMEOUT=30000
MAX_RETRIES=3

# CoinGecko API (for token enrichment)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/sentinel.log

# Health Check
HEALTH_CHECK_INTERVAL=300000